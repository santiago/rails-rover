!!! Strict
%html{:xmlns=>"http://www.w3.org/1999/xhtml"}
  = render "shared/head"
  %body
    .wrap-all
      #head
        %h1 Roger that, Houston!
      #rovers-console
        - 5.times do |i|
          .rover-control{:id=>"rover-control-#{i}"}
            .label Rover #{i}
            .position.hidden
              %span.x
                %input{:type=>"text", :name=>"x"}
              %span.comma ,
              %span.y
                %input{:type=>"text", :name=>"y"}
            %a.send-to-mars-btn{:href=>"#"} Send to Mars
        .reset
          %a Reset
        
      #grid
        %span#rover-0.rover &nbsp;
        %span#rover-1.rover &nbsp;
        %span#rover-2.rover &nbsp;
        %span#rover-3.rover &nbsp;
        %span#rover-4.rover &nbsp;
        - 20.times do |y|
          .row{:id=>"row-#{y}"}
            - 20.times do |x|
              .cell{:id=>"cell-#{x}-#{y}", :class=>"#{x==19 ? 'last' : nil}"}

